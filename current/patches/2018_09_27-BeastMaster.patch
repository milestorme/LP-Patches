+    // Main Menu
+    // Check config if "Normal Pet " is enabled or not
+    if(EnableNormalPet)
+        AddGossipItemFor(player,  7, "|TInterface/ICONS/Ability_Hunter_Pet_Spider:30:30:-22|tNormal Pets ->"              , GOSSIP_SENDER_MAIN, 1000);
